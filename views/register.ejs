  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <title>Register-RUMAHLAKU</title>

</head>

<body>
  <style>
    .container {
      width: 40%;
      margin-top: 9%;
      box-shadow: 0 3px 20px rgba(0, 0, 0, 0.289);
      padding: 50px;
    }
  </style>

  <!-- navbar -->
  <body id="page-top" style="padding: 40px;">
    <nav class="navbar navbar-expand-lg navbar-primary bg-white fixed-top" id="mainNav">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"><img src="/images/rumahlaku.jpeg" ; style="width: 70%;">
        </a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
          aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="container1">
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
              <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">WELCOME TO RUMAHLAKU</a>
            </ul>
          </div>
        </div>
      </div>
      </div>
    </nav>

    <!-- Register -->
    <div class="container justify-content-center" style="background-color:white">
      <h3 class="text-center">Register</h3>
      <hr>
      <form id="register-form">
        <label>Username</label>
        <br>
        <input type="text" name="username" id="inputUsername" class="form-control" placeholder="Username">
        <br>
        <label>Email</label>
        <br>
        <input type="text" name="email" id="inputEmail" class="form-control" placeholder="Email address">
        <br>
        <label>Password</label>
        <br>
        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Your Password">
        <br>
        <label>Nomor Telepon</label>
        <br>
        <input type="notelepon" name="notelepon" id="inputnotelepon" class="form-control"
          placeholder="Your Nomor Telepon">
        <br>
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
        <button class="btn btn-primary btn-block" type="sumbit">Register</button>
       <% if(info.lenght > 0){ %>
        <div class="alert alert-danger" role="alert">
          <%= info %>
        </div>
        <% } %>
        <p>doesn't have account <a href="/login">click here</a></p>
      </form>
    </div><br>
    <div class="text-center">
      <p class="mb-1">&copy; RUBICAMP24</p>
  </div>

    <script type="text/javascript">
      const API_URL = `http://localhost:3000/api/index`
      $(document).ready(function () {
        regis();
      });
      const regis = () => {
        $('#register-form').on('submit', (e) => {
          e.preventDefault();
          let username = $('#inputUsername').val();
          let email = $('#inputEmail').val();
          let password = $('#inputPassword').val();
          let notelepon = $('#inputnotelepon').val();
          $.ajax({
            url: `${API_URL}/register`,
            method: 'POST',
            data: {
              username: username,
              email: email,
              password: password,
              notelepon :notelepon
            }
          }).done(function (data) {
            if (data.msg == 'success') {
              window.location.href = "/login"
            } else {
              alert('gagal')
            }
          }).fail(function (jqXHR, textStatus) {
            alert("Request failed get data: " + textStatus);
          })
        })
      }
    </script>
  </body>

</html>