    <!-- Login -->
    <div class="container justify-content-center" style="background-color:white">
        <h4 class="text-center">Login</h4>
        <hr>
        <form class="form signin" id="login-form">
            <label>Email</label>
            <br>
            <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address">
            <br>
            <label>Password</label>
            <br>
            <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Your Password">
            <br>
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
            <button class="btn btn-primary btn-block" href='/' type="submit">Login</button>
            <p>doesn't have account <a href="/register">click here</a></p>
        </form>
    </div><br>
    <div class="text-center">
     <p class="mb-1">&copy;RUBICAMP24</p>
    </div>
   
    <script type="text/javascript">
        const API_URL = `http://localhost:3000/api/index`
        $(document).ready(function () {
            regis();
        });
        const regis = () => {
            $('#login-form').on('submit', (e) => {
                e.preventDefault();
                let email = $('#inputEmail').val();
                let password = $('#inputPassword').val();
                console.log(password)
                $.ajax({
                    url: `${API_URL}/login`,
                    method: 'POST',
                    data: {
                        email: email,
                        password: password,

                    }
                }).done(function (data) {
                    window.location.href = "/"
                }).fail(function (jqXHR, textStatus) {
                    alert("Request failed get data: " + textStatus);
                })
            })
        }
    </script>
